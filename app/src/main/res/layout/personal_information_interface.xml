<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme"
        android:background="#4cae50"
        android:padding="8dp"
        android:id="@+id/toolbar"
        >
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_icon"
            android:layout_margin="2dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Personal Information"
            android:textColor="@color/White"
            android:textSize="20sp"
            android:layout_marginStart="22dp"
            android:layout_marginLeft="22dp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/out"
            android:textAllCaps="false"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="60dp"
            android:background="@drawable/logout1"
            />

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_marginBottom="8dp"
                    android:padding="5dp"
                    android:text="Required"
                    android:textColor="#d2163f"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/AddPerson"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/edittextframe"
                    android:drawableLeft="@drawable/ic_fiber_manual_record_black_24dp"
                    android:drawableStart="@drawable/ic_fiber_manual_record_black_24dp"
                    android:hint="Profile Name"
                    android:padding="7dp" />

                <EditText
                    android:id="@+id/FirstN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/edittextframe"
                    android:drawableLeft="@drawable/ic_fiber_manual_record_black_24dp"
                    android:drawableStart="@drawable/ic_fiber_manual_record_black_24dp"
                    android:hint="First Name"
                    android:padding="7dp" />

                <EditText
                    android:id="@+id/MiddleN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/edittextframe"
                    android:hint="Middle Name"
                    android:padding="7dp" />

                <EditText
                    android:id="@+id/LastN"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/edittextframe"
                    android:drawableLeft="@drawable/ic_fiber_manual_record_black_24dp"
                    android:drawableStart="@drawable/ic_fiber_manual_record_black_24dp"
                    android:hint="Last Name"
                    android:padding="7dp" />

                <EditText
                    android:id="@+id/DOB"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/edittextframe"
                    android:hint="DOB"
                    android:padding="7dp" />

                <EditText
                    android:id="@+id/NationalID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/edittextframe"
                    android:hint="National ID"
                    android:padding="7dp" />

                <EditText
                    android:id="@+id/PassportNum"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/edittextframe"
                    android:hint="Passport Number"
                    android:padding="7dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/edittextframe"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/email"
                        android:drawableLeft="@drawable/ic_fiber_manual_record_black_24dp"
                        android:drawableStart="@drawable/ic_fiber_manual_record_black_24dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:background="@drawable/edittextframe"
                        android:hint="Email"
                        android:padding="7dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/edittextframe"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/Phonepnum"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:layout_weight="1"
                        android:drawableLeft="@drawable/ic_fiber_manual_record_black_24dp"
                        android:drawableStart="@drawable/ic_fiber_manual_record_black_24dp"
                        android:background="@drawable/edittextframe"
                        android:hint="Phone number"
                        android:padding="7dp" />

                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="15dp"
                    android:text="Address" />

                <EditText
                    android:id="@+id/Countryp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/edittextframe"
                    android:drawableLeft="@drawable/ic_fiber_manual_record_black_24dp"
                    android:drawableStart="@drawable/ic_fiber_manual_record_black_24dp"
                    android:hint="Country"
                    android:padding="7dp" />

                <EditText
                    android:id="@+id/Cityp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/edittextframe"
                    android:drawableLeft="@drawable/ic_fiber_manual_record_black_24dp"
                    android:drawableStart="@drawable/ic_fiber_manual_record_black_24dp"
                    android:hint="City"
                    android:padding="7dp" />

                <EditText
                    android:id="@+id/Streetp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/edittextframe"
                    android:drawableLeft="@drawable/ic_fiber_manual_record_black_24dp"
                    android:drawableStart="@drawable/ic_fiber_manual_record_black_24dp"
                    android:hint="Street"
                    android:padding="7dp" />

                <EditText
                    android:id="@+id/ZipCodep"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@drawable/edittextframe"
                    android:drawableLeft="@drawable/ic_fiber_manual_record_black_24dp"
                    android:drawableStart="@drawable/ic_fiber_manual_record_black_24dp"
                    android:hint="Zip Code"
                    android:padding="7dp" />

                <CheckBox
                    android:id="@+id/allowpesonal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:padding="8dp"
                    android:text="Allow monitoring the profile"
                    android:textSize="15sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </ScrollView>

    </LinearLayout>
    <Button
        android:id="@+id/addPersonal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:background="@drawable/ic_save_black_24dp" />


</LinearLayout>
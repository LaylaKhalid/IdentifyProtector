<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuInterface"
    android:orientation="vertical">



        <android.support.v7.widget.Toolbar

            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" >

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/logo_icon"
                android:layout_margin="2dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu"
                android:textColor="@color/White"
                android:textSize="20sp"
                android:layout_marginStart="22dp"
                android:layout_marginLeft="22dp"
                android:textStyle="bold"/>
            <Button
                android:id="@+id/out"
                android:textAllCaps="false"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="210dp"
                android:background="@drawable/logout1"
                />


        </android.support.v7.widget.Toolbar>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="2"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        >
        <Button
            android:id="@+id/card"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:drawablePadding="20dp"
            android:background="#00ffffff"
            android:text="Credit Cards"
            android:drawableTop="@drawable/creditcard"
            android:layout_margin="5dp"
            android:padding="20dp"
            />

        <Button
            android:id="@+id/info"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:drawablePadding="20dp"
            android:background="#00ffffff"
            android:text="Information"
            android:drawableTop="@drawable/infromatio"
            android:layout_margin="5dp"
            android:padding="20dp"
            />
        <Button
            android:id="@+id/reports"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:drawablePadding="20dp"
            android:background="#00ffffff"
            android:text="Reports"
            android:drawableTop="@drawable/report"
            android:layout_margin="5dp"
            android:padding="20dp"
            />

        <Button
            android:id="@+id/login"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:drawablePadding="20dp"
            android:background="#00ffffff"
            android:text="Login Credential"
            android:drawableTop="@drawable/login"
            android:layout_margin="5dp"
            android:padding="20dp"
            />
    </GridLayout>

    <Button
        android:id="@+id/up"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:drawablePadding="20dp"
        android:background="#00ffffff"
        android:text="Update Settings"
        android:drawableTop="@drawable/mobileupdate"
        android:layout_margin="5dp"
        android:padding="20dp"
        android:layout_gravity="center"
        />


</LinearLayout>